{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "target": "ES2022",
    "module": "ES2022",
    "moduleResolution": "node",
    "outDir": "./dist",
    "declaration": true, // Generate .d.ts files
    "declarationDir": "./dist/types", // Directory for .d.ts files
    "paths": {
      "@models/*": [
        "../application/models/*"
      ]
    }
  },
  "exclude": [
    "__fixtures__",
    "__tests__",
    "coverage",
    "dist",
    "node_modules"
  ],
  "include": [
    "src",
    "src/models"
  ]
}